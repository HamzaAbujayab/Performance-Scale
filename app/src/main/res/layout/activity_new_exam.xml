<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Activity.newExam">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_image" />

    <LinearLayout
        android:id="@+id/dsghsdhgsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_8sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Performance "
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Scale "
            android:textColor="@color/red1"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="#FEFAF7"
        app:cardCornerRadius="@dimen/_30sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dsghsdhgsh"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:layout_marginVertical="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_12sdp"
                                android:layout_marginVertical="@dimen/_8sdp"
                                android:drawableStart="@drawable/ic_qt4"
                                android:drawablePadding="@dimen/_6sdp"
                                android:fontFamily="@font/poppins"
                                android:text="Time for Quiz:"
                                android:textColor="#5B5B5B"
                                android:textSize="@dimen/_14ssp" />

                            <ImageView
                                android:id="@+id/new_exam_iv_minus"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_8sdp"
                                android:src="@drawable/ic_min1" />

                            <TextView
                                android:id="@+id/new_exam_tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:text="10"
                                android:textColor="@color/bg"
                                android:textSize="@dimen/_18ssp" />

                            <ImageView
                                android:id="@+id/new_exam_iv_plush"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_8sdp"
                                android:src="@drawable/ic_plush1" />

                        </LinearLayout>



                        <EditText
                            android:id="@+id/new_exam_et_question"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginVertical="@dimen/_4sdp"
                            android:background="@drawable/bg_et"
                            android:hint="enter your name enter your name enter your name enter your name enter your name"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_4sdp"
                                    android:checked="true" />

                                <RadioButton
                                    android:enabled="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_4sdp" />

                                <RadioButton
                                    android:enabled="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_4sdp" />

                                <RadioButton
                                    android:enabled="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_4sdp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/new_exam_et_answer1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:background="@drawable/bg_et"
                                    android:hint="Choice 1"
                                    android:padding="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp" />

                                <EditText
                                    android:id="@+id/new_exam_et_answer2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:background="@drawable/bg_et"
                                    android:hint="Choice 2"
                                    android:padding="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp" />

                                <EditText
                                    android:id="@+id/new_exam_et_answer3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:background="@drawable/bg_et"
                                    android:hint="Choice 3"
                                    android:padding="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp" />

                                <EditText
                                    android:id="@+id/new_exam_et_answer4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_4sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:background="@drawable/bg_et"
                                    android:hint="Choice 4"
                                    android:padding="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>


                        </LinearLayout>


                        <TextView
                            android:id="@+id/new_exam_btn_add_other_question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginVertical="@dimen/_4sdp"
                            android:background="@drawable/btn2"
                            android:drawableStart="@drawable/ic_plush1"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="center"
                            android:hint="Add Question"
                            android:paddingHorizontal="@dimen/_30sdp"
                            android:paddingVertical="@dimen/_8sdp"
                            android:textColor="@color/red1"
                            android:textSize="@dimen/_12ssp" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/new_exam_rv_all_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.github.ybq.android.spinkit.SpinKitView
                            android:id="@+id/spin_kit"
                            style="@style/SpinKitView.Large.Circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:SpinKit_Color="@color/red1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:drawableStart="@drawable/ic_school2"
                            android:drawablePadding="@dimen/_6sdp"
                            android:text="Specialization  *"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_24sdp"
                            android:layout_marginVertical="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/new_exam_rb_scientific"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="scientific" />

                            <RadioButton
                                android:id="@+id/new_exam_rb_literary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="literary" />

                            <RadioButton
                                android:id="@+id/new_exam_rb_industrial"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="industrial" />

                        </RadioGroup>


                        <TextView
                            android:id="@+id/new_exam_btn_save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_24sdp"
                            android:layout_marginBottom="@dimen/_22sdp"
                            android:background="@drawable/btn2"
                            android:drawableStart="@drawable/ic_save2"
                            android:drawablePadding="@dimen/_8sdp"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_80sdp"
                            android:paddingVertical="@dimen/_12sdp"
                            android:text="Save As Quiz"
                            android:textColor="@color/red1"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>